# =============================================================================
# .env.example - Financial Regulation Agent
# Copy this file to .env and fill in your actual values
# Never commit .env to version control
# =============================================================================

# =============================================================================
# Required API Keys
# =============================================================================

# OpenAI (required for embeddings and LLM)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google / Gemini (required when LLM_PROVIDER=gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Cohere (required for reranking in hybrid search)
COHERE_API_KEY=your-cohere-api-key-here

# LangSmith (optional but highly recommended for tracing & debugging)
LANGCHAIN_API_KEY=your-langsmith-api-key-here

# API Key for authenticating requests to /query endpoint
# Generate a strong secret key (e.g. using openssl rand -hex 32)
API_KEY=your-super-secret-api-key-change-this-in-production

# =============================================================================
# Model Configuration
# =============================================================================

# OpenAI Models
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Gemini Models (LLM - no 'models/' prefix needed)
GEMINI_LLM_MODEL=gemini-2.5-pro
# Embeddings - SDK often auto-prepends 'models/'
GEMINI_EMBEDDING_MODEL=models/gemini-embedding-001

# LLM Provider (openai or gemini)
LLM_PROVIDER=gemini

# LLM Timeout (seconds)
LLM_TIMEOUT=30.0

# LLM Max Retries
LLM_MAX_RETRIES=3

# =============================================================================
# Retrieval & Search Settings
# =============================================================================
HYBRID_TOP_K=8
HYBRID_BM25_WEIGHT=0.4
HYBRID_VECTOR_WEIGHT=0.6

# =============================================================================
# Observability & DB
# =============================================================================
DEBUG=false
CHROMA_PERSIST_DIR=data/chroma_db
CHROMA_COLLECTION_NAME=financial_regulation

# LangSmith
LANGCHAIN_PROJECT=financial-regulation-agent
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# Development / Testing
# =============================================================================
LANGCHAIN_VERBOSE=false
LANGCHAIN_DEBUG=false
